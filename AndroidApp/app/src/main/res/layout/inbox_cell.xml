<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    tools:context="com.example.tazo.newbottom.Inbox.InboxFragment">

    <ImageView
        android:id="@+id/inbox_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/animal_king_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/inbox_item_title"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="anyRtl"
            android:textStyle="bold"
            android:textSize="17sp"
            tools:text="מבצע החודש במלך החיות"
            />

        <TextView
            android:id="@+id/inbox_item_content"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="anyRtl"
            tools:text="מבצע החודש במלך החיות"
            />

    </LinearLayout>


</LinearLayout>
