<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inbox_cell_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    tools:context="com.example.tazo.newbottom.inbox.InboxFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <EditText
            android:id="@+id/inbox_edit_item_title"
            android:layout_width="0dp"
            android:hint="@string/edit_cell_hint_title"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom"
            android:lineSpacingExtra="1dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="קולקציית ערב חדשה מבחר גדול של שמלות, חצאיות וגופיות ערב ב 50% הנחה!" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/businessMainColor"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inbox_edit_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="#ff0000"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/inbox_edit_item_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/msg1" />


    <EditText
        android:id="@+id/inbox_edit_item_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:hint="@string/edit_cell_hint_body"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="16sp"
        tools:text="מבצע החודש במלך החיות" />

